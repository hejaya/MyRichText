<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sanJiao_card"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_item"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_h1"/>

        <ImageView
            android:id="@+id/img_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_h2"/>
        <ImageView
            android:id="@+id/img_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_h3"/>
        <ImageView
            android:id="@+id/img_zw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_zw"/>

    </LinearLayout>

    <com.g_three.myrichtext.view.SanJiaoView
        android:id="@+id/sanjiaoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:sjv_color="@color/bgColor"
        app:sjv_direction="bottom"
        app:sjv_resolutionHeight="10dp"
        app:sjv_resolutionWidth="10dp" />

</LinearLayout>