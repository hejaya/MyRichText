<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sanJiao_card"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_item"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_b"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_t"/>

        <ImageView
            android:id="@+id/img_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_u"/>
        <LinearLayout
            android:id="@+id/ly_point"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center">

        <ImageView

            android:layout_width="6dp"
            android:layout_height="6dp"
            android:gravity="center"
            android:src="@drawable/shape_cirle" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_l"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ä¸€"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <com.g_three.myrichtext.view.SanJiaoView
        android:id="@+id/sanjiaoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:sjv_color="@color/bgColor"
        app:sjv_direction="bottom"
        app:sjv_resolutionHeight="10dp"
        app:sjv_resolutionWidth="10dp" />

</LinearLayout>